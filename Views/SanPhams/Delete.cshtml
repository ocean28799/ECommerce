@model ECommerce.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="main-content-container container-fluid px-4">
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">TechPi Administrator</span>
            <h3 class="page-title">Xoá</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <a href="@Url.Action("Index")" class="mb-2 btn btn-sm btn-outline-danger mr-1"><i class="material-icons">arrow_back</i></a>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <div class="row">
                            <div class="col">
                                <div class="row container">
                                    <div class="col-md-5">
                                        <h5 style="font-weight:600">@Html.DisplayNameFor(model => model.MaSanPham)</h5>
                                    </div>
                                    <div class="col-md-5">
                                        <h5>@Html.DisplayFor(model => model.MaSanPham)</h5>
                                    </div>
                                </div>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color" style="align-content:center">
                                        <input type="submit" value="Delete" class="mb-2 btn btn-danger mr-2" style="margin:2%;margin-left:42%" />
                                    </div>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>





